<p id="notice"><%= notice %></p>

<h1 class="title">Books</h1>

<div class="bookss">
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Author</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.name %></td>
        <td><%= book.author %></td>

        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>
<div class="new">
<button>
<%= link_to 'New Book', new_book_path %>
</button>

<div class="new">
<button>
<%= link_to 'Check out what others are reading', library_path %>
</button>

</div>